<div id="<%= dom_id repository %>">
  <p>
    <strong>Id repo:</strong>
    <%= repository.id_repo %>
  </p>

  <p>
    <strong>Login:</strong>
    <%= repository.login %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <%= image_tag(repository.avatar, size: "50x50", alt: "Avatar") %>
  </p>
  <p>
    <strong>Url:</strong>
    <%= link_to(repository.url, repository.url, target: "_blank") %>
  </p>

</div>
